{
  "*.cpp": {
    "template": [
      "import std;",
      "",
      "namespace ranges = std::ranges;",
      "namespace views = std::views;",
      "",
      "struct Line {",
      "  std::string str;",
      "};",
      "",
      "std::ostream& operator<<(std::ostream& os, const Line& line) {",
      "  return os << \"Line {open} \" << line.str << \" {close}\";",
      "}",
      "",
      "std::istream& operator>>(std::istream& is, Line& line) {",
      "  std::string str;",
      "  if (is >> str) {",
      "    line = {open}str{close};",
      "    return is;",
      "  }",
      "  if (is.eof()) {",
      "    return is;",
      "  }",
      "  throw std::runtime_error(\"failed parsing input\");",
      "}",
      "",
      "int main() {",
      "  std::ios_base::sync_with_stdio(false);",
      "",
      "  const auto lines { views::istream<Line>(std::cin) |",
      "                     ranges::to<std::vector<Line>>() };",
      "  ranges::copy(lines, std::ostream_iterator<Line>(std::cout, \"\\n\"));",
      "",
      "  const auto part1{open}0{close};",
      "  const auto part2{open}0{close};",
      "  std::print(\"{open}{close} {open}{close}\\n\", part1, part2);",
      "",
      "  return 0;",
      "}"
    ]
  }
}
